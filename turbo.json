{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "copy-docs": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "copy-docs"],
      "outputs": ["dist/**", "docs/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}

